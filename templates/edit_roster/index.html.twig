{% extends 'base.html.twig' %}

{% block title %}Hello EditRosterController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <ul>
            {{ form_start(form) }}

            <h3>Champions</h3>
            <ul>
                {% for roster in form.champions %}
                    <li>
                        {{ form_row(roster.championId) }}
                        {{ form_row(roster.playerId) }}
                        <h3>{{ roster.name.vars.value }} ({{ roster.type.vars.value }})</h3>
                        {{ form_row(roster.name) }}
                        {{ form_row(roster.type) }}
                        {{ form_row(roster.checked) }}
                        {{ form_row(roster.rank) }}
                        {{ form_row(roster.signature) }}
                    </li>
                {% endfor %}
            </ul>
            {{ form_end(form) }}

        </ul>
    </div>
{% endblock %}
