{% extends 'base.html.twig' %}

{% block title %}MCOC Alliance Roster{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h1>Hello {{ app.user.name }}</h1>
        <ul>
            <li><a href="{{ path('edit_roster', {tier: 6}) }}">Edit your 6* roster</a></li>
        </ul>
        <ul>
        {% if app.user.activePlayer.member %}
            {% set member = app.user.activePlayer.member %}
            <li>
                Member ({{ member.role }}) of <b>{{ member.alliance.name }}</b>
            </li>
            {% if member.role > 0 %}
                <li>
                    <a href="{{ path('leave_alliance') }}">Leave alliance</a>
                </li>
            {% else %}
                <li>
                    <a href="{{ path('destroy_alliance') }}">Destroy alliance</a>
                </li>
            {% endif %}
        {% else %}
            <li>
                <a href="{{ path('create_alliance') }}">Create an alliance</a>
            </li>
        {% endif %}
        </ul>
    </div>
{% endblock %}
